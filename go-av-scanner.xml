<?xml version="1.0"?>
<Container version="2">
  <Name>go-av-scanner</Name>
  <Repository>go-av-scanner:latest</Repository>
  <Network>bridge</Network>
  <MyID>go-av-scanner</MyID>
  <Privileged>false</Privileged>
  <Overview>Go AV scanner</Overview>
  <Category>Web</Category>
  <WebUI>http://[IP]:[PORT:8080]</WebUI>
  <Shell>sh</Shell>


  <Config 
    Name="ENABLE_UI" 
    Target="ENABLE_UI" 
    Default="true" 
    Mode="rw" 
    Description="" 
    Type="Variable" 
    Display="always" 
    Required="false" 
    Mask="false">
      true
  </Config>

  <Config 
    Name="GO_ENV" 
    Target="GO_ENV" 
    Default="production" 
    Mode="rw" 
    Description="" 
    Type="Variable" 
    Display="always" 
    Required="false" 
    Mask="false">
      production
  </Config>

  <Config 
    Name="MAX_UPLOAD_BYTES" 
    Target="MAX_UPLOAD_BYTES" 
    Default="4294967296" 
    Mode="rw" 
    Description="" 
    Type="Variable" 
    Display="always" 
    Required="false" 
    Mask="false">
      4294967296
  </Config>
  
  <Config 
    Name="WebUI Port" 
    Target="8080" 
    Default="8080" 
    Mode="tcp" 
    Description="HTTP port" 
    Type="Port" 
    Display="always"
    Required="true" 
    Mask="false">
      8080
  </Config>
  
  <Config 
    Name="clamdb" 
    Target="/var/lib/clamav" 
    Default="/mnt/user/appdata/go-av-scanner/clamdb" 
    Mode="rw" 
    Description="ClamAV database" 
    Type="Path" 
    Display="always" 
    Required="true" 
    Mask="false">
      /mnt/user/appdata/go-av-scanner/clamdb
  </Config>
</Container>
